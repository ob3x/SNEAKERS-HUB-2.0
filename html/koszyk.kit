<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Koszyk | SneakersHub.pl</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="dist/css/style.min.css">
</head>

<body>
    <!-- @include 'nav' -->
    <section class="basket">
        <h1 class="shop-title basket-title">Koszyk</h1>
        <div class="wrapper basket-box">
            <div class="basket-left">
                <div class="basket-left__item">
                    <img src="dist/img/grey-fog.png" alt="grey-fog" class="basket-left__img">
                    <div class="basket-left__box">
                        <h3 class="basket-left__box-title">NIKE</h3>
                        <p class="basket-left__box-text">Dunk Low "Grey Fog"</p>
                    </div>
                    <div class="basket-left__box">
                        <h3 class="basket-left__box-title">Cena</h3>
                        <p class="basket-left__box-text"><span class="price">449</span> zł</p>
                    </div>
                    <div class="basket-left__box">
                        <h3 class="basket-left__box-title">Rozmiar</h3>
                        <p class="basket-left__box-text">38 eu | 23.5 cm | 5.5 us</p>
                    </div>
                    <div class="basket-left__x"></div>
                </div>
                <div class="basket-left__item">
                    <img src="dist/img/cacao.png" alt="grey-fog" class="basket-left__img">
                    <div class="basket-left__box">
                        <h3 class="basket-left__box-title">NIKE</h3>
                        <p class="basket-left__box-text">Dunk Low "Cacao Wow"</p>
                    </div>
                    <div class="basket-left__box">
                        <h3 class="basket-left__box-title">Cena</h3>
                        <p class="basket-left__box-text"><span class="price">449</span> zł</p>
                    </div>
                    <div class="basket-left__box">
                        <h3 class="basket-left__box-title">Rozmiar</h3>
                        <p class="basket-left__box-text">38 eu | 23.5 cm | 5.5 us</p>
                    </div>
                    <div class="basket-left__x"></div>
                </div>
            </div>
            <div class="basket-right">
                <h2 class="basket-right__title">Podsumowanie</h2>
                <div class="basket-right__box">
                    <p class="basket-right__box-text">Razem</p>
                    <p class="basket-right__box-text count">449 zł</p>
                </div>
                <div class="basket-right__box">
                    <p class="basket-right__box-text">Dostawa</p>
                    <p class="basket-right__box-text">20 zł</p>
                </div>
                <div class="basket-right__box">
                    <p class="basket-right__box-text">Kod rabatowy</p>
                    <p class="basket-right__box-text">0 zł</p>
                </div>
                <div class="basket-right__rabat">
                    <input type="text" class="basket-right__rabat-input" placeholder="Wpisz kod rabatowy">
                    <button class="basket-right__rabat-btn">Dodaj</button>
                </div>
                <div class="basket-right__line"></div>
                <div class="basket-right__price">
                    <p class="basket-right__title">suma</p>
                    <div class="basket-right__price-box">
                        <p class="basket-right__price-count"> 469 zł</p>
                        <p class="basket-right__box-text">Wliczone koszty przesyłki</p>
                    </div>
                </div>
                <a href="zamowienie.html" class="basket-right__btn">Przejdź Do Płatności</a>
            </div>
        </div>
    </section>
    <!-- @include 'footer' -->
    <script src="dist/js/shopping-bag.min.js"></script>
    <script src="dist/js/index.min.js"></script>
</body>

</html>